<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--    创建对象-->
    <bean id="user" class="spring.ioc.xml.User" p:sex="female">
        <!--    set方法注入属性-->
        <property name="name" value="anyi"/>
        <!--    有参构造注入属性-->
        <constructor-arg name="name" value="gaohao"/>
        <!--    级联赋值-->
        <property name="book.name" value="资治通鉴"></property>
    </bean>

    <bean id="book" class="spring.ioc.xml.Book">
        <!--    注入外部bean-->
        <property name="user" ref="user"></property>
        <!--    注入内部bean-->
        <property name="teacher">
            <bean id="teacher" class="spring.ioc.xml.Teacher"></bean>
        </property>
    </bean>

    <bean id="teacher" class="spring.ioc.xml.Teacher">
        <!--    注入list-->
        <property name="list">
            <list>
                <value>1</value>
            </list>
        </property>
        <!--    注入set-->
        <property name="set">
            <set>
                <value>1</value>
            </set>
        </property>
        <!--    注入map-->
        <property name="map">
            <map>
                <entry key="1" value="a"></entry>
            </map>
        </property>
        <!--    注入数组-->
        <property name="courses">
            <array>
                <value>1</value>
            </array>
        </property>
    </bean>
</beans>